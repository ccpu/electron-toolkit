{
  "name": "electron-toolkit",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.17.0",
  "description": "A collection of packages to help Electron developers build better applications",
  "author": {
    "email": "m.doaie@hotmail.com",
    "name": "Mohamad Doaie",
    "url": "https://github.com/ccpu"
  },
  "homepage": "https://github.com/ccpu/electron-toolkit",
  "repository": {
    "type": "git",
    "url": "https://github.com/ccpu/electron-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/ccpu/electron-toolkit/issues"
  },
  "keywords": [
    "electron",
    "vite",
    "react",
    "typescript",
    "tailwindcss",
    "vitest",
    "monorepo",
    "pnpm",
    "turbo",
    "template",
    "boilerplate",
    "react-template",
    "electron-react"
  ],
  "main": "scripts/electron-entry.mjs",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=9.6.0"
  },
  "scripts": {
    "start": "pnpm build:packages  && electron-vite-toolkit start",
    "build:packages": "turbo run build --filter=electron-utilities --filter=electron-vite-toolkit",
    "build": "turbo run build",
    "create-window": "node scripts/create-new-window.js",
    "compile": "turbo run build && electron-builder build --config electron-builder.mjs",
    "test": "turbo run test",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage --config tooling/vitest/index.js",
    "typecheck": "turbo run typecheck",
    "tsc:watch": "tsc --noEmit --watch --project tsconfig.json",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "pnpm format --write",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache && pnpm lint:root",
    "lint:fix": "pnpm lint --fix && pnpm lint:root:fix",
    "lint:root": "eslint tests scripts .github *.json --cache --cache-location .cache/.eslintcache",
    "lint:root:fix": "pnpm lint:root --fix",
    "lint:ws": "pnpm dlx sherif@latest",
    "fix:all": "pnpm format:fix && pnpm lint:fix",
    "clean:workspaces": "turbo run clean:all && git clean -xdf .cache .turbo",
    "clean:workspaces:install": "pnpm clean:workspaces && pnpm install",
    "deps:update": "npx taze -r -w && pnpm install",
    "deps:update:major": "npx taze major -r -w && pnpm install",
    "turbo:gen:init": "pnpm turbo gen init",
    "prepare": "husky",
    "release": "pnpm changeset"
  },
  "dependencies": {
    "@manypkg/get-packages": "^3.1.0",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@internal/eslint-config": "workspace:*",
    "@internal/prettier-config": "workspace:*",
    "@internal/tsconfig": "workspace:*",
    "@pixpilot/dev-config": "catalog:dev",
    "@pixpilot/workspace-package-generator": "^1.1.3",
    "@playwright/test": "1.55.0",
    "@turbo/gen": "^2.5.6",
    "@types/node": "catalog:dev",
    "@vitest/coverage-v8": "catalog:dev",
    "@vitest/ui": "catalog:dev",
    "electron": "catalog:dev",
    "electron-builder": "26.0.12",
    "electron-vite-toolkit": "workspace:*",
    "eslint": "catalog:dev",
    "glob": "catalog:dev",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "playwright": "^1.55.0",
    "prettier": "catalog:dev",
    "prettier-plugin-tailwindcss": "catalog:dev",
    "turbo": "^2.5.6",
    "typescript": "catalog:dev",
    "typescript-eslint": "catalog:dev",
    "vite": "catalog:dev",
    "vitest": "catalog:dev"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  },
  "prettier": "@internal/prettier-config"
}
